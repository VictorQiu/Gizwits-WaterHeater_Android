<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlTop"
        style="@style/TopLayout" >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:padding="10dp"
            android:src="@drawable/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/appointment_water"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCountDown"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:onClick="onClick" >

        <ImageView
            android:id="@+id/ivIconCountDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:src="@drawable/pattern_alarm_icon" />

        <TextView
            android:id="@+id/tvDetailsCountDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ivIconCountDown"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/appointment_count_down"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/tbCountDownFlag"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/toggle_selector2"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tbCountDownFlag"
            android:text="01:39后"
            android:textColor="@color/text_blue"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_gray" />

    <RelativeLayout
        android:id="@+id/rlTimer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:onClick="onClick" >

        <ImageView
            android:id="@+id/ivIconTimer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:src="@drawable/pattern_alarm_icon" />

        <TextView
            android:id="@+id/tvDetailsTimer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ivIconTimer"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/appointment_timer"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/tbTimingFlag"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/toggle_selector2"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/tvTiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tbTimingFlag"
            android:text="01:39后"
            android:textColor="@color/text_blue"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_gray" />

</LinearLayout>